<%- include('../partials/header') %> 
<div class="container">
    <div class="row">
        <h1 class="comment-form-header">Edit comment</h1>
        <div class="comment-form-container">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" name="comments[text]" value="<%= comment.text %>">
                </div>

                <!-- <div class="form-group">
                    <input class="form-control" type="text" name="comments[author]" placeholder="Author Name">
                </div> -->

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
                </div>

            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
        
    </div>
</div>

<%- include('../partials/footer') %>